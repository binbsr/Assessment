<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Assessment.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header-bg">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container">
                <div>
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <div>
                            <span class="brand-font">Written Assessments</span>
                        </div>
                        <div>
                            <span class="brand-font-sub">Solutions & Support</span>
                        </div>
                    </a>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div style="float: right;">
                    <div class="dropdown">
                        <button class="dropbtn text-dark">Questions<img src="abc.svg" class="dropdown-img"></button>
                        <div class="dropdown-content">
                            <a asp-area="" asp-controller="Home" asp-action="AddQuestion">Add Question to Bank</a>
                            <a asp-area="" asp-controller="Home" asp-action="QuestionBank">QBank Dashboard</a>
                        </div>
                    </div>
                    <div class="dropdown">
                        <button class="dropbtn text-dark">Exam Papers<img src="abc.svg" class="dropdown-img"></button>
                        <div class="dropdown-content">
                            <a asp-area="" asp-controller="Home" asp-action="ExamPaper">New Exam Papers</a>
                        </div>
                    </div>
                    <div class="dropdown">
                        <button class="dropbtn text-dark">Attendees<img src="abc.svg" class="dropdown-img"></button>
                        <div class="dropdown-content">
                            <a asp-area="" asp-controller="Home" asp-action="Attendees">Register</a>
                        </div>
                    </div>
                    <div class="dropdown">
                        <button class="dropbtn text-dark">Exam Session<img src="abc.svg" class="dropdown-img"></button>
                        <div class="dropdown-content">
                            <a asp-area="" asp-controller="Home" asp-action="ExamSession">New Session</a>
                        </div>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-secondary">Request Quotes</button>
                    </div>
                </div>                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - Assessment.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
